@model List<CmCategory>
@{
    ViewData["Title"] = "menuAddPanel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = Model;
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/menuEdit.css" />
</head>
<body>
    <h2>Menu Add Panel</h2>

    <form method="post" asp-controller="Admin" asp-action="menuEkle" enctype="multipart/form-data">
        <div class="center">
            <select name="categoryId" id="categories">
                @{
                    foreach (var c in categories)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                }

            </select>

            <br>
            <div class="kapsam ">
                <label>Menu Adı:</label>
                <input class="border-1" type="text" name="Name" id="text">
            </div>
            <div class="kapsam ">
                <label>Fiyat:</label>
                <input class="border-1" type="text" name="Price" id="text">
            </div>
            <div class="kapsam">
                <input type="file" value="file" name="file" required>
                <button type="submit"> Ekle </button>
            </div>
        </div>
    </form>
</body>